@model StudentManagementDapper.Models.Student

@{
    ViewData["Title"] = "Delete Student";
}

<style>
    body {
        font-family: Arial;
        background: #f5f7fa;
        padding: 20px;
    }

    .warning-box {
        width: 420px;
        background: white;
        padding: 20px;
        border-left: 6px solid #d9534f;
        border-radius: 4px;
    }

    .btn-delete {
        background: #d9534f;
        color: white;
        border: none;
        padding: 10px;
        width: 100%;
        margin-top: 15px;
        cursor: pointer;
        border-radius: 4px;
    }

        .btn-delete:hover {
            background: #b8423f;
        }

    .back {
        display: block;
        margin-top: 10px;
    }
</style>

<div class="warning-box">
    <h3>Are you sure you want to delete this student?</h3>

    <p><b>Name:</b> @Model.Name</p>
    <p><b>Email:</b> @Model.Email</p>
    <p><b>Reg #:</b> @Model.RegistrationNumber</p>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn-delete">Delete</button>
    </form>

    <a href="/Students" class="back">← Cancel</a>
</div>
