@model IEnumerable<StudentManagementDapper.Models.Student>

<h2>Students</h2>

<a class="btn btn-primary" href="/Students/Create">Add Student</a>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Reg #</th>
            <th>Dept</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.Name</td>
                <td>@s.Email</td>
                <td>@s.RegistrationNumber</td>
                <td>@s.Department</td>
                <td>
                    <a class="btn btn-sm btn-info" href="/Students/Details/@s.Id">Details</a>
                    <a class="btn btn-sm btn-warning" href="/Students/Edit/@s.Id">Edit</a>
                    <a class="btn btn-sm btn-danger" href="/Students/Delete/@s.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
